<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.devmobile.servi_alpha.Info_Activity">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/prof"
        android:layout_centerHorizontal="true"/>



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/user_cv"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/user_image"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_name"
                android:layout_alignParentTop="true"
                android:text="Username:dummy"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_address"
                android:layout_below="@+id/user_name"
                android:text="Address:Phony Street, Phony city. Tunisia"
                android:layout_marginTop="24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/user_number"
                android:layout_below="@+id/user_address"
                android:text="Phone Number:0011223344"
                android:layout_marginTop="24dp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>

